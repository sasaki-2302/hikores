<!--ログインしていなければ処理終了-->
<% if !member_signed_in? %>
<!--自分のフォローボタンを表示しない処理-->
<% elsif member.id == current_member.id %>
<!--相手をフォローしているか確認-->
<% elsif current_member.following?(member) %>
  <%= link_to "リフォロー", member_relationships_path(member.id), method: :delete %>
<% else %>
  <%= link_to "フォロー", member_relationships_path(member.id), method: :post %>
<% end %>