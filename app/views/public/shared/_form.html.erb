<div class="form-group">
  <%= form_with model: post do |f| %>
    <h5>都道府県名</h5>
    <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"item-prefecture"}) %><br>
    <h5>市区町村名</h5>
    <%= f.collection_select(:city_id, City.all, :id, :name, {}, {class:"select-box", id:"item-city"}) %><br>
    <h5>タイトル</h5>
    <%= f.text_field :title %><br>
    <h5>内容</h5>
    <%= f.text_area :body %><br>
    <%= f.submit %>
  <% end %>
</div>