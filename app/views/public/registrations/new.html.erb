<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "public/shared/info", member: current_member %>
    </div>
    <div class="mb-3" style="font-size:20px; color:#008000;"><%= flash[:notice] %></div>
    <div class="col-md-5 card my-auto px-0">
      <div class="card-header">
        <h4>新規登録</h4>
      </div>
      <div class="form-group">
        <%= form_with model: @member, url: member_registration_path do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
          <%= f.label:"ユーザー名" %><br>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"  %>
          <%= f.label:"メールアドレス" %><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          <div class="field">
          <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="field">
            <%= f.label :パスワード確認 %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
          <%= f.button :type => "submit", class: "mt-3", style: "background: none;" do %>
            <i class="fas fa-user-plus"></i>
          <% end %>
        <% end %>
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>
