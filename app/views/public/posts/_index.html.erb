<table class="table">
  <thead>
    <tr>
      <th>都道府県名</th>
      <th>投稿タイトル</th>
      <th>投稿内容</th>
      <th>コメント数</th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td>
          <%= link_to post.prefecture.name, root_path %>
          <%= link_to post.city.name, root_path %>
        </td>
        <td><%= link_to post.title, post_path(post.id) %></td>
        <td><%= post.body %></td>
        <td><%= link_to "コメント " + post.comments.count.to_s + " 件", post_path(post.id) %></td>
        <td>
          <% if !member_signed_in? %>
            <%= "♡" + post.favorites.count.to_s %>
          <% elsif post.favorited_by?(current_member) %>
            <%= link_to "♥" + post.favorites.count.to_s, post_favorites_path(post), method: :delete %>
          <% else %>
            <%= link_to "♡" + post.favorites.count.to_s, post_favorites_path(post), method: :post %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>