<table>
  <thead>
    <tr>
      <th>投稿ユーザー</th>
      <th>投稿タイトル</th>
      <th>投稿内容</th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to post.member.name, member_path(post.member_id) %></td>
        <td><%= link_to post.title, post_path(post.id) %></td>
        <td><%= post.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>