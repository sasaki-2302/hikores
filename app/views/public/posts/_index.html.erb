<table class="table">
  <thead>
    <tr>
      <th>投稿地域</th>
      <th>タイトル</th>
      <th>コメント</th>
      <th>いいね</th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td>
          <%= link_to post.prefecture.name, root_path %>
          <%= link_to post.city.name, root_path %>
        </td>
        <td><%= link_to post.title, post_path(post.id) %></td>
        <td><%= link_to "コメント " + post.comments.count.to_s + " 件", post_path(post.id) %></td>
        <td>
          <%= render "public/shared/favorite_btn", post: post %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>