<table class="table">
  <thead>
    <tr>
      <th>投稿地域</th>
      <th>タイトル</th>
      <!--URLに"search"を含む場合、表示内容を変更-->
      <% unless request.path.include?("search") %>
        <th></th>
        <th></th>
      <% else %>
        <th>内容</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td>
          <%= link_to post.prefecture.name, search_path(prefecture_id: post.prefecture[:id]) %>
          <%= link_to post.city.name, search_path(prefecture_id: post.prefecture[:id], city_id: post.city[:id]) %>
        </td>
        <td><%= link_to post.title, post_path(post.id) %></td>
        <!--URLに"search"を含む場合、表示内容を変更-->
        <% unless request.path.include?("search") %>
          <td><%= render "public/shared/favorite_btn", post: post %></td>
          <td><%= link_to "コメント " + post.comments.count.to_s + " 件", post_path(post.id) %></td>
        <% else %>
          <td><%= post.body %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>