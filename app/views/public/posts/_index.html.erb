<div class="d-flex justify-content-center flex-wrap">
  <% posts.each do |post| %>
    <div class="col-xs-2 card m-1" style="width:200px; height:250px;">
      <div>
        <%= image_tag post.member.get_profile_image, size: '30x30', style:"border-radius: 20px;" %>
        <%= link_to post.member.name, member_path(post.member.id) %>
      </div>
      <div class="my-1"><%= link_to post.title.truncate(14), post_path(post.id) %></div>
      <!--表示文字数を30文字に固定-->
      <div><%= post.body.truncate(74) %></div>
      <!--コメント・いいねを投稿内下部に固定-->
      <div class="d-flex justify-content-between mt-auto">
        <%= link_to "コメント " + post.comments.count.to_s + " 件", post_path(post.id) %>
        <%= render "public/shared/favorite_btn", post: post %>
      </div>
    </div>
  <% end %>
</div>