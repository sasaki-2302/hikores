<div class="d-flex justify-content-center flex-wrap">
  <% posts.each do |post| %>
    <div class="col-xs-2 card m-1" style="width:200px; height:250px;">
      <div>
        <%= link_to image_tag(post.member.get_profile_image, size: '30x30', style:"border-radius: 20px;"), member_path(post.member.id) %>
        <%= link_to post.member.name, member_path(post.member.id) %>
      </div>
      <div class="card">
        <!--serch_pathにpref_idとcity_idを渡すことで検索結果を表示-->
        <div><%= link_to post.city.name, search_path(prefecture_id: post.prefecture.id, city_id: post.city.id) %></div>
        <!--タイトルが14文字に以上なら省略-->
        <div class="my-1"><%= link_to post.title.truncate(14), post_path(post.id) %></div>
        <!--投稿内容が62文字に以上なら省略定-->
        <div><%= post.body.truncate(62) %></div>
      </div>
      <!--コメント・いいねを投稿内下部に固定-->
      <div class="d-flex justify-content-between mt-auto">
        <%= link_to "コメント " + post.comments.count.to_s + " 件", post_path(post.id) %>
        <%= render "public/shared/favorite_btn", post: post %>
      </div>
    </div>
  <% end %>
</div>